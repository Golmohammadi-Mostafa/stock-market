<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <property name="idType" value="bigserial" dbms="postgresql"/>
    <property name="idType" value="bigint" dbms="mysql, oracle, mssql, h2"/>

    <changeSet id="20211112191600-1" author="m.golmohammadi">
        <createTable tableName="USERS_ROLES">
            <column name="USER_ID" type="${idType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ROLE_ID" type="${idType}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20211112191600-2" author="m.golmohammadi">

        <addForeignKeyConstraint baseColumnNames="USER_ID"
                                 baseTableName="USERS_ROLES"
                                 constraintName="FK_USER_ID"
                                 referencedColumnNames="ID"
                                 referencedTableName="USERS"/>

    </changeSet>
    <changeSet id="20211112191600-3" author="m.golmohammadi">

        <addForeignKeyConstraint baseColumnNames="ROLE_ID"
                                 baseTableName="USERS_ROLES"
                                 constraintName="FK_ROLE_ID"
                                 referencedColumnNames="ID"
                                 referencedTableName="ROLES"/>
    </changeSet>

</databaseChangeLog>
